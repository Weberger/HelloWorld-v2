<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#46FA2D" />
            <stroke
                android:width="1dp"
                android:color="#29AD17" />
            <corners
                android:radius="30dip" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#46FA2D"
                android:endColor="#29AD17"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#07CC00" />
            <corners
                android:radius="30dip" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
